{
  "name": "avoo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@4.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.6",
    "plop": "^4.0.4",
    "prettier": "^3.6.2",
    "turbo": "^2.0.6",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "generate": "plop",
    "emu:ios": "open -a Simulator",
    "emu:android": "$ANDROID_HOME/emulator/emulator -avd $AVD_NAME || true",
    "dev": "concurrently -k -n web,mobile -c auto \"yarn workspace web dev\" \"yarn workspace mobile dev:both\"",
    "dev:client": "concurrently -k -n web,mobile -c auto \"yarn workspace web dev\" \"yarn workspace mobile dev:client:both\"",
    "dev:web": "yarn workspace web dev",
    "dev:mobile": "yarn workspace mobile dev",
    "android": "yarn workspace mobile android",
    "ios": "yarn workspace mobile ios",
    "start": "turbo run dev --parallel",
    "start:web": "yarn workspace web start",
    "start:mobile": "yarn workspace mobile dev",
    "build": "turbo run build",
    "build:web": "yarn workspace web build",
    "build:mobile": "yarn workspace mobile build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier -c"
    ],
    "*.{json,md,css,scss}": [
      "prettier -c"
    ]
  }
}