{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["packages/ui/src/*"],
      "@shared/*": ["packages/shared/src/*"],
      "@env/*": ["packages/env/src/*"],
      "@config/*": ["packages/config/*"],
      "@api-client": ["packages/api-client/src/index.ts"]
    }
  }
}
