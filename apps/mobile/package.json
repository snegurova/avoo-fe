{
  "name": "mobile",
  "private": true,
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "expo start",
    "dev:both": "CI=1 expo start --android --ios --port 8081",
    "dev:client": "expo start --dev-client",
    "dev:client:both": "CI=1 expo start --dev-client --android --ios --port 8081",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "prebuild": "expo prebuild",
    "build": "echo \"Use EAS or 'expo run:android' for debug builds\"",
    "open:android": "expo start --android --non-interactive",
    "open:ios": "expo start --ios --non-interactive",
    "open:android:client": "expo start --dev-client --android --non-interactive",
    "open:ios:client": "expo start --dev-client --ios --non-interactive",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "@avoo/hooks": "workspace:*",
    "@avoo/store": "workspace:*",
    "@react-navigation/bottom-tabs": "^7.5.0",
    "@react-navigation/native": "^7.1.18",
    "@react-navigation/native-stack": "^7.5.1",
    "expo": "54.0.19",
    "expo-dev-client": "~6.0.16",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-hook-form": "^7.54.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0"
  },
  "devDependencies": {
    "@react-native-community/cli-server-api": "^12.3.0",
    "@types/react": "^19.1.0",
    "@types/react-native": "^0.73.0",
    "eslint": "^9.9.0",
    "eslint-config-avoo": "workspace:*",
    "turbo": "^2.5.6",
    "typescript": "^5.5.4"
  }
}
